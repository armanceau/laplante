{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}
{% block stylesheets %}
<style>
    .footer{
        position: absolute;
        width: 100%;
    }
</style>
{% endblock %}
{% block body %}
    <!-- Product section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="https://dummyimage.com/600x700/dee2e6/6c757d.jpg" alt="..." /></div>
                <div class="col-md-6">
                    <h1 class="display-5 fw-bolder">{{product.libelle}}</h1>
                    <div class="fs-5 mb-5">
                        <span>{{product.prix}}</span>
                    </div>
                    <p class="lead">{{product.description}}</p>
                    {# Supposons que product.note contient la note du produit #}

                    {% set maxStars = 5 %}

                    {% set fullStars = product.note|default(0) %}
                    {% set emptyStars = maxStars - fullStars %}

                    {% for _ in 1..fullStars %}
                        <i class="bi bi-star-fill text-warning"></i>
                    {% endfor %}

                    {# Afficher les Ã©toiles vides #}
                    {% for _ in 1..emptyStars %}
                        <i class="bi bi-star"></i>
                    {% endfor %}

                    <div class="d-flex gap-3">
                        <div>
                            <button class="btn btn-outline-dark flex-shrink-0" type="button">
                                <i class="bi-cart-fill me-1"></i>
                                Add to cart
                            </button>
                        </div>

                        <div>
                            <a class="btn btn-outline-danger" href="{{ path('admin_product_delete', {id: product.id}) }}" onclick="return confirm('Etes vous sur de vouloir supprimer cette annonce ?')">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>

                        <div>
                            <a class="btn btn-outline-primary" href="{{ path('admin_product_edit', {id: product.id}) }}">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Related items section-->
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
{% endblock %}
