{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}
{% block body %}
    <!-- Product section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0 rounded" src="https://dummyimage.com/500x500/dee2e6/6c757d.jpg" alt="..." /></div>
                <div class="col-md-6">
                    <h1 class="display-5 fw-bolder">{{product.libelle}}</h1>
                    <div class="fs-5 mb-5">
                        <span>{{product.prix}}€</span>
                    </div>
                    <p class="lead">{{product.description}}</p>
                    {# Supposons que product.note contient la note du produit #}

                    {% set maxStars = 5 %}

                    {% set fullStars = product.note|default(0) %}
                    {% set emptyStars = maxStars - fullStars %}

                    {% for _ in 1..fullStars %}
                        <i class="bi bi-star-fill text-warning"></i>
                    {% endfor %}

                    {# Afficher les étoiles vides #}
                    {% for _ in 1..emptyStars %}
                        <i class="bi bi-star"></i>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
    <!-- Related items section-->
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
{% endblock %}
{% block footer %}
{% endblock %}
